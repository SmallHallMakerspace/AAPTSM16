  \begin{beamercolorbox}[center]{page number in head/foot}%
    \usebeamerfont{page number in head/foot}%
    \iftoggle{numberbyframe}{\insertframenumber}{\insertpagenumber}%
  \end{beamercolorbox}%
\end{minipage}%
